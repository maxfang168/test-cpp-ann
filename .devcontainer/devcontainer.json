{
  "name": "C++ Development",
  "image": "mcr.microsoft.com/vscode/devcontainers/cpp:0-ubuntu-20.04",
  "features": {
    "git": "latest",
    "vscode": "latest"
  },
  "extensions": [
    "ms-vscode.cpptools",  // C++ IntelliSense and Debugging
    "ms-vscode.cmake-tools",  // CMake support
    "twxs.cmake"  // CMake language support
  ],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "forwardPorts": [8080],
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential"
}
